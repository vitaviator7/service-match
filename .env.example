# =============================================================================
# ServiceMatch Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ServiceMatch
NODE_ENV=development

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:password@localhost:5432/servicematch?schema=public"

# -----------------------------------------------------------------------------
# Redis (Upstash)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# -----------------------------------------------------------------------------
# Authentication (NextAuth)
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple OAuth
APPLE_ID=
APPLE_SECRET=

# -----------------------------------------------------------------------------
# Stripe
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Connect
STRIPE_CONNECT_CLIENT_ID=

# Stripe Product/Price IDs (set after creating in Stripe dashboard)
STRIPE_PROVIDER_PRO_PRICE_ID=
STRIPE_PROVIDER_PREMIUM_PRICE_ID=
STRIPE_CUSTOMER_PLUS_PRICE_ID=

# -----------------------------------------------------------------------------
# Pusher (Real-time Messaging)
# -----------------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=eu
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=eu

# -----------------------------------------------------------------------------
# SendGrid (Email)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@servicematch.co.uk

# -----------------------------------------------------------------------------
# Twilio (SMS)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# Google Maps
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_SERVER_KEY=

# -----------------------------------------------------------------------------
# AWS S3 (File Storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-2
AWS_S3_BUCKET=servicematch-uploads

# -----------------------------------------------------------------------------
# Sentry (Error Monitoring)
# -----------------------------------------------------------------------------
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# -----------------------------------------------------------------------------
# PostHog (Analytics)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://eu.posthog.com

# -----------------------------------------------------------------------------
# Worker Service
# -----------------------------------------------------------------------------
WORKER_REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# Feature Flags (defaults)
# -----------------------------------------------------------------------------
FEATURE_INSTANT_BOOKING=true
FEATURE_DYNAMIC_PRICING=false
FEATURE_AI_ASSIST=false
FEATURE_STRIPE_IDENTITY=false

# -----------------------------------------------------------------------------
# Platform Configuration (defaults)
# -----------------------------------------------------------------------------
PLATFORM_FEE_DEFAULT=0.18
PLATFORM_FEE_STARTER=0.22
PLATFORM_FEE_PRO=0.18
PLATFORM_FEE_PREMIUM=0.15
LEAD_FEE_STARTER=3.00
CUSTOMER_PLUS_CASHBACK=0.05
